unit uWindowAwards;

interface

uses
  SysUtils,
  Forms,
  uPluginHeaders,
  JvAppIniStorage,
  Classes,
  Windows,
  Controls,
  ActnList,
  DB,
  Variants,
  KDaoDatabase,
  uWindowAwardsForm;

function Initialize(App: TApplication; Scr: TScreen; ActionList: TActionList; AppStorage: TJvAppIniFileStorage; ImageList: TImageList; DllCommand: pointer; Database: TKADaoDatabase; dsLogEdit: TDataSource; dsLog: TDataSource; IMSName:string; var PluginForm:TForm; var SettingsFrame:TFrame): Integer; stdcall;
function DeInitialize(): Integer; stdcall;
function CoreCommand(IdCommand:integer;Sender:TObject; lParam, wParam:variant):integer; stdcall;


var
WindowAwardsForm:TWindowAwardsForm;
aHandle:THandle;
aApplication:TApplication;
lAppStorage:TJvAppIniFileStorage;
ldsLogEdit:TDataSource;
ldsLog:TDataSource;
lDatabase:TKADaoDatabase;
lDllCommand: TDllCommand;
lMode:string;


implementation






function Initialize(App: TApplication; Scr: TScreen; ActionList: TActionList; AppStorage: TJvAppIniFileStorage; ImageList: TImageList; DllCommand: pointer; Database: TKADaoDatabase; dsLogEdit: TDataSource; dsLog: TDataSource; IMSName:string; var PluginForm:TForm; var SettingsFrame:TFrame): Integer; stdcall;
begin
 Application:=App;
 ldsLogEdit:=dsLogEdit;
 ldsLog:=dsLog;
 lDatabase:=Database;
 lAppStorage:=AppStorage;
 @lDllCommand := DllCommand;
 if not Assigned(WindowAwardsForm) then
   begin
     WindowAwardsForm:=TWindowAwardsForm.Create(Application);
     WindowAwardsForm.qryAwardsList.Database:=lDatabase;
     WindowAwardsForm.qryAwards.Database:=lDatabase;
     WindowAwardsForm.qryBands.Database:=lDatabase;
     WindowAwardsForm.qryModes.Database:=lDatabase;
     WindowAwardsForm.qryStations.Database:=lDatabase;
	 PluginForm:=WindowAwardsForm;
   end;

 Result:=1;
end;

function DeInitialize():integer; stdcall;
begin
 if Assigned(WindowAwardsForm) then
   WindowAwardsForm.Free;
 Result:=1;
end;


function CoreCommand(IdCommand:integer;Sender:TObject; lParam, wParam:variant):integer; stdcall;
begin
 case IdCommand of
    CC_LOADED:
      begin
       if Assigned(WindowAwardsForm) then
         WindowAwardsForm.Loaded;
      end;

    CC_OPTIONS_CHANGED:
      begin
       if Assigned(WindowAwardsForm) then
         WindowAwardsForm.OptionsChanged;
      end;


    CC_STATION_CHANGED:
      begin
       if Assigned(WindowAwardsForm) then
       begin
          WindowAwardsForm.StationParentId:=Integer(Sender);
          WindowAwardsForm.StationId := lParam;
          WindowAwardsForm.qryAwardsList.Close;
          WindowAwardsForm.qryAwardsList.Open;
       end;
      end;
 end;

end;

end.



